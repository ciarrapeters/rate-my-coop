<div class="container">
  <h2>Welcome!</h2>
  <p>We hope you find exactly what you're looking for in a place to stay.</p>
</div>

{{#each model as |company|}}
  <article class="listing">
    <h3>{{company.title}}</h3>
    <div class="detail owner">
      <span>Owner:</span> {{company.owner}}
    </div>
    <div class="detail type">
      <span>Type:</span> {{company.category}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{company.city}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{company.bedrooms}}
    </div>
  </article>
{{/each}}
